{
  "name": "@ldesign/generator",
  "version": "0.1.0",
  "description": "LDesign 代码生成器 - 快速生成组件、页面、配置文件等",
  "keywords": [
    "ldesign",
    "generator",
    "scaffold",
    "template",
    "cli",
    "code-generator"
  ],
  "author": "LDesign Team",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./templates": {
      "types": "./dist/templates/index.d.ts",
      "import": "./dist/templates/index.js",
      "require": "./dist/templates/index.cjs"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "README.md",
    "LICENSE",
    "package.json",
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@ldesign/kit": "workspace:*",
    "ejs": "^3.1.9",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "fast-glob": "^3.3.2",
    "boxen": "^7.1.1",
    "plop": "^4.0.1",
    "yeoman-generator": "^5.10.0",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/inquirer": "^9.0.7",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.7.3",
    "tsup": "^8.0.0",
    "vitest": "^1.6.1",
    "rimraf": "^5.0.5"
  },
  "bin": {
    "ldesign-generate": "./bin/cli.js",
    "lgen": "./bin/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}


